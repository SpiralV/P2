<div class="container">
    <div class="weather-title">
      <h1>rain.cloud</h1>
      <p>view weather info for your city</p>
    </div>
    </div>
  <form action="/" method="POST">
    <input type="text" name="city" class="ghost-input" placeholder="Enter a city">
    <button type="submit">submit</button>
  </form>

  <div class="result">
    <% if(temp !== null)  {%>
      <h1 class="temp"><%= Math.round(temp) %>Â°C</h1>
    <% } %>

    <div class="icon-des">
      <% if(icon !== null)  {%>
        <img class="icon" src="http://openweathermap.org/img/w/<%= icon %>.png" alt="">
      <% } %>
      <% if(des !== null)  {%>
        <h3><%= des %></h3>
      <% } %>
    </div>

    <% if(city !== null)  {%>
      <p class="city"><%= city %></p>
    <% } %>
    
  </div>
</div>